@model FreelancerProject.ViewModels.FreelancerCVViewmodel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Customer.cshtml";
}
<br />

<h2> @Html.DisplayFor(model => model.Freelancer.Firstname) @Html.DisplayFor(model => model.Freelancer.Lastname)</h2>
<div>
<button style="" class="btn btn-primary">Spara</button>
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Kontaktuppgifter</h3>

            <ul class="list-unstyled">
                <li class="boldli">
                    @Html.DisplayNameFor(model => model.Freelancer.Firstname)
                </li>

                <li>
                    @Html.DisplayFor(model => model.Freelancer.Firstname)
                </li>

                <li class="boldli">
                    @Html.DisplayNameFor(model => model.Freelancer.Lastname)
                </li>

                <li>
                    @Html.DisplayFor(model => model.Freelancer.Lastname)
                </li>

                <li class="boldli">
                    @Html.DisplayNameFor(model => model.Freelancer.Birthday)
                </li>

                <li>
                    @Html.DisplayFor(model => model.BirtdayString)
                </li>

                <li class="boldli">
                    @Html.DisplayNameFor(model => model.Freelancer.Nationality)
                </li>

                <li>
                    @Html.DisplayFor(model => model.Freelancer.Nationality)
                </li>

                <li class="boldli">
                    @Html.DisplayNameFor(model => model.Freelancer.Address)
                </li>

                <li>
                    @Html.DisplayFor(model => model.Freelancer.Address)
                </li>

                <li class="boldli">
                    @Html.DisplayNameFor(model => model.Freelancer.ZipCode)
                </li>

                <li>
                    @Html.DisplayFor(model => model.Freelancer.ZipCode)
                </li>

                <li class="boldli">
                    @Html.DisplayNameFor(model => model.Freelancer.City)
                </li>

                <li>
                    @Html.DisplayFor(model => model.Freelancer.City)
                </li>

                <li class="boldli">
                    @Html.DisplayNameFor(model => model.Freelancer.Phonenumber)
                </li>

                <li>
                    @Html.DisplayFor(model => model.Freelancer.Phonenumber)
                </li>

                <li class="boldli">
                    @Html.DisplayNameFor(model => model.Freelancer.Email)
                </li>

                <li>
                    @Html.DisplayFor(model => model.Freelancer.Email)
                </li>

                <li class="boldli">
                    Jag finns på:
                </li>

            </ul>
            @if (Model.Freelancer.LinkToGithub != null)
            {
                <a href="http://@Model.Freelancer.LinkToGithub" style="color:purple"><i class="fab fa-github fa-3x"></i></a>


            }

            @if (Model.Freelancer.LinkToLinkedIn != null)
            {
                <a href="http://@Model.Freelancer.LinkToLinkedIn"><i class="fab fa-linkedin fa-3x"></i></a>

            }
            <br /><br />


        </div>



        <div class="col-md-6">
            <h3>Om mig</h3>

            <ul class="list-unstyled">


                <li class="boldli">
                    @Html.DisplayNameFor(model => model.OtherInfo.ProfileMessage)
                </li>

                <li>
                    @Html.DisplayFor(model => model.OtherInfo.ProfileMessage)
                </li>

                <li class="boldli">
                    @Html.DisplayNameFor(model => model.OtherInfo.DriversLicence)
                </li>

                <li>
                    @Html.DisplayFor(model => model.OtherInfo.DriversLicence)
                </li>

                <li class="boldli">
                    @Html.DisplayNameFor(model => model.OtherInfo.CoreCompetences)
                </li>

                <li>
                    @Html.DisplayFor(model => model.OtherInfo.CoreCompetences)
                </li>
            </ul>
            <br /><br />
            <ul class="list-unstyled">
                <li class="boldli">
                    Språk
                </li>
            </ul>



            @foreach (var item in Model.Languages)
            {
                <span class="badge badge-pill badge-secondary" style="background:green">
                    @item.Language
                </span>
            }
            <a>
                <span class="badge badge-pill badge-success"><i class="fas fa-plus-circle"></i>Lägg till språk</span>
            </a>

            <h3>Kompetenser</h3>

            <br />

            <div class="list-group">
                @foreach (var item in Model.SortedCompetenceList)
                {
                    <a href="" class="list-group-item d-flex justify-content-between align-items-center">
                        @item.Competence.CompetenceName
                        <span class="badge badge-pill badge-primary">
                            @for (int i = 0; i < item.Ranking; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                        </span>
                    </a>
                }

            </div>

        </div>


    </div>
    <hr />

    <div class="col-sm-pull-10">


        <h3>Tidigare utbildningar</h3>

        <br />

        <table class="table">
            <tr>
                <th>
                    Ämne
                </th>
                <th>
                    Skola
                </th>
                <th>
                    Startdatum
                </th>
                <th>
                    Slutdatum
                </th>
                <th>
                    Examen
                </th>

            </tr>

            @foreach (var item in Model.Educations)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.School)
                    </td>
                    <td>
                        @item.StartDate.ToShortDateString()
                    </td>
                    <td>
                        @item.EndDate.ToString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Degree)
                    </td>


                </tr>
            }

        </table>
    </div>
</div>
<hr />
<div class="col-sm-pull-10">

    <h3>Tidigare arbeten</h3>
    @Html.ActionLink("Lägg till arbete", "AddWork", new { freelancerId = Model.Freelancer.Id })

    <table class="table">
        <tr>
            <th>
                Roll
            </th>
            <th>
                Företag
            </th>
            <th>
                Startdatum
            </th>
            <th>
                Slutdatum
            </th>
            <th>
                Arbetsbeskrivning
            </th>

        </tr>

        @foreach (var item in Model.Works)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td>
                    @item.StartDate.ToShortDateString()
                </td>
                <td>
                    @item.EndDate.ToString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkDescription)
                </td>

            </tr>
        }

    </table>
</div>

@Html.ActionLink("Tillbaka", "FilterFreelancers", "FreelancerPersons")

