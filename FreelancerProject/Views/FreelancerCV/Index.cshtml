@model FreelancerProject.ViewModels.FreelancerCVViewmodel
@{
    ViewBag.Title = "Index";
}

<h2> @Html.DisplayFor(model => model.Freelancer.Firstname) @Html.DisplayFor(model => model.Freelancer.Lastname)</h2>




<dt>
    @Html.DisplayNameFor(model => model.OtherInfo.ProfileMessage)
</dt>

<dd>
    @Html.DisplayFor(model => model.OtherInfo.ProfileMessage)
</dd>

<dt>
    @Html.DisplayNameFor(model => model.OtherInfo.DriversLicence)
</dt>

<dd>
    @Html.DisplayFor(model => model.OtherInfo.DriversLicence)
</dd>

<dt>
    @Html.DisplayNameFor(model => model.OtherInfo.CoreCompetences)
</dt>

<dd>
    @Html.DisplayFor(model => model.OtherInfo.CoreCompetences)
</dd>

<dt>
    @Html.DisplayNameFor(model => model.Languages)
</dt>
<ul>
    @foreach (var item in Model.Languages)
    {
        <li>@item.Language</li>
    }
</ul>



<h2>Tidigare utbildningar</h2>

@Html.ActionLink("Lägg till utbildning", "AddEducation", new { freelancerId = Model.Freelancer.Id }) 
<br />

<table class="table">
    <tr>
        <th>
            Ämne
        </th>
        <th>
            Skola
        </th>
        <th>
            Startdatum
        </th>
        <th>
            Slutdatum
        </th>
        <th>
            Examen
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Educations)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School)
            </td>
            <td>
                @item.StartDate.ToShortDateString()
            </td>
            <td>
                @item.EndDate.ToString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>

            <!--TODO: Lägg till dessa länkar om man är inloggad som användare? -->
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<hr />
<h2>Tidigare arbeten</h2>
<table class="table">
    <tr>
        <th>
            Roll
        </th>
        <th>
            Företag
        </th>
        <th>
            Startdatum
        </th>
        <th>
            Slutdatum
        </th>
        <th>
            Arbetsbeskrivning
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Works)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @item.StartDate.ToShortDateString()
            </td>
            <td>
                @item.EndDate.ToString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkDescription)
            </td>

            <!--TODO: Lägg till dessa länkar om man är inloggad som användare? -->
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
