        <li>
            @item.Competence.CompetenceName - @item.Ranking
        </li>
    }
</ul>


<h3>Tidigare utbildningar</h3>

@Html.ActionLink("Lägg till utbildning", "AddEducation", new { freelancerId = Model.Freelancer.Id })
<br />

<table class="table">
    <tr>
        <th>
            Ämne
        </th>
        <th>
            Skola
        </th>
        <th>
            Startdatum
        </th>
        <th>
            Slutdatum
        </th>
        <th>
            Examen
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Educations)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School)
            </td>
            <td>
                @item.StartDate.ToShortDateString()
            </td>
            <td>
                @item.EndDate.ToString()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>

            <!--TODO: Lägg till dessa länkar om man är inloggad som användare? -->
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<hr />
