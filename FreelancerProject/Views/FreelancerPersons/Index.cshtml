@model IEnumerable<FreelancerProject.Models.FreelancerPerson>

@{
    ViewBag.Title = "Index";
}

<h2>Find a freelancer</h2>
<br />
<br />

<div class="container">
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"></span><i class="glyphicon"></i>
            <input type="text" id="Search" placeholder="Search" class="form-control" />
        </div>
    </div>
</div>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Firstname

            </th>
            <th>
                Lastname

            </th>
            <th>
                Address

            </th>
            <th>
                Phonenumber

            </th>
            <th>
                Email

            </th>
            <th>
                Profile

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Item in Model)
        {


            <tr class="Search">
                <td>@Item.Firstname</td>
                <td>@Item.Lastname</td>
                <td>@Item.Address</td>
                <td>@Item.Phonenumber</td>
                <td>@Item.Email</td>
                @foreach (var Education in Item.Education)
                {
                    <td>@Education.Subject</td>
                }
                @foreach (var Competence in Item.Freelancer_Competence)
                {
                    <td>@Competence.Competence</td>
                }


                <td>
                    @Html.ActionLink("Profile", "Index", "Vyforprofile")
                </td>
            </tr>

        }
    </tbody>
</table>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>
    $(document).ready(function () {
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1)
                return true;
        }
        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            });
        });
    });
</script>





