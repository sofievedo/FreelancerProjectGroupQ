@model FreelancerProject.ViewModels.FreelancerCompetenceViewModel
@{
    /**/

    ViewBag.Title = "Kompetenser";
}

<h2>
    Lägg till kompetens
</h2>


@using (Html.BeginForm("Create", "Freelancer_Competence", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div>

            @Html.HiddenFor(model => model.FreelancerId, new { Value = Model.FreelancerId })

            <div class="form-group">
                @Html.DropDownListFor(model => model.RoleId, ViewBag.Roles as SelectList, "Välj roll", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.CompetenceId, new SelectList(" "), "Välj kompetens", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.Ranking, ViewBag.Ranking as SelectList, "Välj ranking", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @if (Model.ExceptionMessage != null)
                {
                    <p> @Model.ExceptionMessage; </p>
                    @Html.LabelFor(model => model.ExceptionMessage)

                }
            </div>


        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lägg till" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tillbaka till CV", "Index", "FreelancerCV")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval"),
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/DropdownForCompetences.js"></script>

